<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_dnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drag and Drop To Rearrange"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toBottomOf="@id/quiz"/>

    <com.bahasain.ui.view.RearrangeView
        android:id="@+id/rearrangeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>
